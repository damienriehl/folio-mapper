{
  "name": "folio-mapper",
  "private": true,
  "scripts": {
    "dev:web": "pnpm --filter @folio-mapper/web dev",
    "dev:api": "cd backend && .venv/bin/uvicorn app.main:app --reload --port 8000",
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:web\"",
    "build": "pnpm --filter @folio-mapper/web build",
    "test": "pnpm --filter './packages/*' test && pnpm --filter @folio-mapper/web test",
    "test:api": "cd backend && .venv/bin/python -m pytest tests/ -v",
    "lint": "eslint 'packages/*/src/**/*.{ts,tsx}' 'apps/*/src/**/*.{ts,tsx}'",
    "format": "prettier --write '**/*.{ts,tsx,json,css,md}'",
    "dev:desktop": "concurrently \"pnpm dev:api\" \"pnpm dev:web\" \"cd apps/desktop && npx tsc && ELECTRON_DISABLE_SANDBOX=1 npx electron dist/main.js --dev\"",
    "build:desktop": "bash scripts/build-desktop.sh"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild", "electron"]
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0"
  }
}
